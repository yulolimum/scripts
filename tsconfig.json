{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "noPropertyAccessFromIndexSignature": false,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "exactOptionalPropertyTypes": false,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "**/*.mjs"],
  "include": ["scripts", "configs"]
}
